                                        <Setter Target="PART_Content.Foreground" 
                                                Value="{Binding SelectedForegroundBrush, Mode=OneWay, 
                                                        RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
