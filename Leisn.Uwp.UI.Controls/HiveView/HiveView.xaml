                                        <Setter Target="PART_Content.Foreground" Value="{ThemeResource GridViewItemForegroundSelected}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOverPressed">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Polygon.(RevealBrush.State)" Value="Pressed"/>
                                        <Setter Target="PART_Polygon.Fill" Value="{ThemeResource GridViewItemBackgroundSelectedPointerOver}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Polygon.(RevealBrush.State)" Value="Pressed"/>
                                        <Setter Target="PART_Polygon.Fill" Value="{ThemeResource GridViewItemBackgroundPressed}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PressedSelected">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Polygon.(RevealBrush.State)" Value="Pressed"/>
                                        <Setter Target="PART_Polygon.Fill" Value="{ThemeResource GridViewItemBackgroundSelectedPressed}"/>
